require( "ControlScene" )
kwkexp:pause( )

--timerStash.timer_PRUEBA = timer.performWithDelay( 5000, act_pr, 1 )
--_G.Subtitle = false
--_G.AutoNextPage = true

local function playMusic( fun )
	-- body
	local audioHandle

	local function onCompleteSound( event )
		-- body
		audio.dispose( audioHandle )
        audioHandle = nil
		fun(300)
	end

	audioHandle = audio.loadSound( audioDir.."samba.mp3" )
	audio.play( audioHandle, {channel = 2, onComplete = onCompleteSound} )
	
end

_G.Level = 1
_G.Phase = 1

local aud = {"exp_br2.mp3"}
local sub = {"!Vaya! Qué ciudad más bonita. Pero ¿qué es esa música que se oye?"}

addCharacter(kwkboss, aud, sub)

local sec = {1}
setSecuence( sec )

local events = { {mytype = "effects", value = {1, playMusic} }, nil }
setEventsControlScene(events)

playScene( "page_26" )